{
  "compilerOptions": {
    "outDir": "build",
    "declaration": true,
    "strict": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "target": "ESNext",
    "module": "CommonJS",
    "sourceMap": true,
    "lib": ["dom", "ESNext"],
    "types": ["jest", "node"]
  },
  "include": ["src/**/*"],
  "exclude": ["src/examples"]
}
